<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/view_local_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Service Test"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/bind_local_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bind Service"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/unbind_local_service"
        app:layout_constraintTop_toBottomOf="@id/view_local_service"
        />

    <Button
        android:id="@+id/unbind_local_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unbind Service"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toRightOf="@id/bind_local_service"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_local_service"
        />

    <TextView
        android:id="@+id/view_remote_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remote Service Test"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/bind_local_service"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/bind_remote_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bind Service"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/unbind_remote_service"
        app:layout_constraintTop_toBottomOf="@id/view_remote_service"
        />

    <Button
        android:id="@+id/unbind_remote_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unbind Service"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toRightOf="@id/bind_remote_service"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_remote_service"
        />




</androidx.constraintlayout.widget.ConstraintLayout>